*,*::after,*::before{margin:0;paddin:0;box-sizing:inherit}html{font-size:62.5%}body{box-sizing:border-box}body{font-family:'Lato', sans-serif;font-size:1.6rem;font-weight:400;line-height:1.6}.nav{font-family:'Patrick Hand', cursive;font-size:1.8rem}.nav__notice{font-weight:700;text-transform:uppercase;background-color:#30AFAA;padding:.5rem 30rem;text-align:center}.nav__notice-link{color:#fff;font-weight:300;margin-left:.5rem}.nav__logo,.nav__menu,.nav__newsletter{padding:0 30rem}.nav__logo{display:flex;text-decoration:none}.nav__logo-image{width:20rem}.nav__logo-text{display:flex;flex-direction:column;justify-content:center;margin-left:-1rem}.nav__logo-text--main{font-size:4rem;color:#EC633F;text-transform:uppercase;letter-spacing:1rem}.nav__logo-text--sub{font-size:1.6rem;color:#000;letter-spacing:.1rem;margin-top:-1.5rem}.nav__menu{background-color:#EC633F;display:flex;justify-content:space-around;text-transform:uppercase;list-style:none}.nav__menu-link:link,.nav__menu-link:visited{padding:.5rem;color:#fff;text-decoration:none;transition:background-color 0.2s}.nav__menu-link:hover,.nav__menu-link:active{background-color:#30AFAA}.nav__newsletter{background-color:#F4F4F4}.newsletter{display:flex;justify-content:center;padding-top:1.5rem}.newsletter__heading{text-transform:uppercase;margin-right:1.5rem}.newsletter__heading--nav{color:#6C685D;font-size:1.8rem;margin-top:.5rem}.newsletter__group{width:30rem}.newsletter__group-field{width:100%;font-family:inherit}.newsletter__group-field--nav{font-size:1.8rem;padding:.5rem 1rem;border-radius:3px;border:2px solid #6C685D}.newsletter__group-field--nav:focus{outline:none;border:2px solid #30AFAA}.newsletter__group-label{font-size:1.2rem;margin-left:1.2rem;display:block;transition:all .3s}.newsletter__group-field:placeholder-shown+.newsletter__group-label{opacity:0;visibility:hidden;transform:translateY(-2rem)}.btn{text-transform:uppercase}.btn__newsletter{margin-left:2rem}.btn__newsletter--nav{font-family:inherit;font-size:1.8rem;color:#6C685D;border:2px solid #6C685D;border-radius:3px;background-color:#fff;padding:.5rem 1rem;align-self:flex-start}.btn__newsletter--nav:hover,.btn__newsletter--nav:active{color:#fff;background-color:#30AFAA;border:2px solid #358280}
