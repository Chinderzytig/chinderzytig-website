*,*::after,*::before{margin:0;paddin:0;box-sizing:inherit}html{font-size:62.5%}body{box-sizing:border-box}body{font-family:'Lato', sans-serif;font-size:1.6rem;font-weight:400;line-height:1.6}.nav :not(:first-child){font-family:'Patrick Hand', cursive}.nav__notice{font-weight:700;background-color:#30AFAA;padding:.5rem 30rem;text-align:center}.nav__notice-link{color:#fff;font-weight:300;margin-left:.5rem}.nav__logo,.nav__menu,.nav__newsletter{padding:0 30rem}.nav__logo{display:flex;text-decoration:none}.nav__logo-image{width:20rem}.nav__logo-text{display:flex;flex-direction:column;justify-content:center;margin-left:-1rem}.nav__logo-text--main{font-size:4rem;color:#EC633F;text-transform:uppercase;letter-spacing:1rem}.nav__logo-text--sub{color:#000;letter-spacing:.1rem;margin-top:-1rem}.nav__menu{background-color:#EC633F;display:flex;justify-content:space-around;font-size:1.8rem;text-transform:uppercase;list-style:none}.nav__menu-link:link,.nav__menu-link:visited{padding:.5rem;color:#fff;text-decoration:none;transition:background-color 0.2s}.nav__menu-link:hover,.nav__menu-link:active{background-color:#30AFAA}.nav__newsletter{background-color:#F4F4F4}.newsletter{display:flex;justify-content:center;padding:1rem 0}.newsletter__heading{text-transform:uppercase;margin-right:1.5rem;align-self:center}.newsletter__heading--nav{font-size:1.8rem}.newsletter__field{width:30rem;padding:.5rem}.newsletter__field--nav{border-radius:3px;border:2px solid #6C685D;font-size:1.8rem}.newsletter__field--nav:focus{outline:none;border:2px solid #30AFAA}
